<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <preConditions>
        <runningAs username="mapp-database-user"/>
    </preConditions>

    <changeSet id="1" author="Niko Lehto">
        <createTable tableName="organization">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Niko Lehto">
      <createTable tableName="area">
        <column name="id" type="int" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="organization_id" type="int">
          <constraints nullable="false" />
        </column>
        <column name="parent_area_id" type="int">
          <constraints nullable="true" />
        </column>
        <column name="photo" type="varchar(45)">
          <constraints nullable="true" />
        </column>
        <column name="base_image" type="varchar(45)">
          <constraints nullable="true" />
        </column>
        <column name="name" type="varchar(100)">
          <constraints nullable="false" />
        </column>
        <column name="area_type_id" type="int">
          <constraints nullable="false" />
        </column>
      </createTable>
      <createTable tableName="area_type">
        <column name="id" type="int" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="name" type="varchar(20)">
          <constraints nullable="false" />
        </column>
      </createTable>
        <insert tableName="area_type">
            <column name="id">1</column>
            <column name="name">building</column>
        </insert>
        <insert tableName="area_type">
            <column name="id">2</column>
            <column name="name">floor</column>
        </insert>
        <insert tableName="area_type">
            <column name="id">3</column>
            <column name="name">room</column>
        </insert>
    </changeSet>

    <changeSet id="3" author="Niko Lehto">
      <createTable tableName="coordinate">
        <column name="id" type="int" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="latitude" type="float">
          <constraints nullable="false" />
        </column>
        <column name="longitude" type="float">
          <constraints nullable="false" />
        </column>
        <column name="area_id" type="int">
          <constraints nullable="false" />
        </column>
      </createTable>
    </changeSet>

    <changeSet id="4" author="Niko Lehto">
      <createTable tableName="attribute">
        <column name="id" type="int" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="area_id" type="int">
          <constraints nullable="false" />
        </column>
        <column name="value" type="varchar(100)">
          <constraints nullable="true" />
        </column>
        <column name="attribute_type_id" type="int">
          <constraints nullable="false" />
        </column>
      </createTable>
      <createTable tableName="attribute_type">
        <column name="id" type="int" autoIncrement="true">
          <constraints primaryKey="true" nullable="false" />
        </column>
        <column name="name" type="varchar(50)">
          <constraints nullable="false" />
        </column>
        <column name="icon" type="varchar(50)">
          <constraints nullable="true" />
        </column>
      </createTable>
    </changeSet>

    <changeSet id="5" author="Niko Lehto">
      <addForeignKeyConstraint baseTableName="area"
                               baseColumnNames="organization_id"
                               constraintName="fk_area_organization_id"
                               referencedTableName="organization"
                               referencedColumnNames="id" />

      <addForeignKeyConstraint baseTableName="area"
                               baseColumnNames="parent_area_id"
                               constraintName="fk_area_parent_area_id"
                               referencedTableName="area"
                               referencedColumnNames="id" />

      <addForeignKeyConstraint baseTableName="area"
                               baseColumnNames="area_type_id"
                               constraintName="fk_area_area_type_id"
                               referencedTableName="area_type"
                               referencedColumnNames="id" />

      <addForeignKeyConstraint baseTableName="coordinate"
                               baseColumnNames="area_id"
                               constraintName="fk_coordinate_area_id"
                               referencedTableName="area"
                               referencedColumnNames="id" />

      <addForeignKeyConstraint baseTableName="attribute"
                               baseColumnNames="area_id"
                               constraintName="fk_attribute_area_id"
                               referencedTableName="area"
                               referencedColumnNames="id" />

      <addForeignKeyConstraint baseTableName="attribute"
                               baseColumnNames="attribute_type_id"
                               constraintName="fk_attribute_attribute_type_id"
                               referencedTableName="attribute_type"
                               referencedColumnNames="id" />
    </changeSet>


</databaseChangeLog>
